<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level %date{dd:MM:yyyy HH:mm:ss} [%thread] %logger{36} - %message%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="Console" />
    </root>

    <logger name="ro.store" level="trace" additivity="false">
        <appender-ref ref="Console" />
    </logger>

</configuration>